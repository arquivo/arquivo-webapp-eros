<section id="search-tools-date-slider">   
    <h4>Search Date Slider</h4>
  
    <div id="slider-range-container">   
      
      <!-- starts: start year  -->
      <a href="#ex1" rel="modal:open"><input type="button" id="startYear" readonly="readonly">
      <span class="searchCalendarDay" id="calendarDayStart">01 Jan</span></a>
  
     <!-- start  year button  -->     
         
