<!-- starts image advanced search form container -->
<section class="form-container">
    <h3>Image advanced search form</h3>
<!-- starts pages advanced search -->
<form id="advanced-search-form-images" class="advanced-search-form" action="images-search-results" method="GET">
<fieldset>
  <legend>Fill the form</legend>
   <!-- With these words -->
   <label for="words"><strong>Related</strong> to these Words:</label>
   <input id="words" type="text" name="words">
   <small>e.g.: group draw</small>
   <!-- With this phrase -->
   <label for="words"><strong>Related</strong> to this expression or sentence:</label>
   <input id="words" type="text" name="words">
   <small>e.g.: euro 2004</small>
   <!-- Any of these words -->
   <label for="words"><strong>Not releated</strong> to this expression or sentence:</label>
   <input id="words" type="text" name="words">
   <small>e.g.: rugby</small>   
   <!-- Formats -->
   <label for="format-type"><strong>Images</strong> with the format:</label>
   <select id="format-type" name="format-type" class="">
    <option value="all">All formats</option>
    <option value="jpg">Joint Photographic Experts Group (.jpg)</option>
    <option value="png">Portable Network Graphics (.png)</option>
    <option value="gif">Graphics Interchange Format (.gif)</option>
    <option value="bmp">Bitmap Image File (.bmp)</option>
    <option value="webp">WEBP (.webp)</option>
   </select>  
   <!-- words -->
   <label for="image-size"><strong>Size:</strong></label>
    <select id="image-size" name="image-size" class="">
     <option value="all" selected>All formats</option>
     <option value="small">Small</option>
     <option value="medium">Medium</option>
     <option value="large">Large</option>
    </select>  
   <!-- words -->
   <label for="safe-search"><strong>Safe search:</strong></label>
   <select id="safe-search" name="safe-search" class="">
    <option value="show-all">All</option>
    <option value="remove-explicit">Remove explicit</option>
   </select>  

   <label for="words"><strong>Website:</strong></label>
   <input id="words" type="text" name="words">
   <small>e.g.: www.fccn.pt</small> 
    
  <!-- starts advanced search navigation -->
  <section class="navigation-tools">
    <h3>Pages advanced search navigation</h3> 
    <button type="submit" class="search-form-advanced-button" value="Advanced Search">Search &rarr;</button>
  </section> 
  <!-- ends advanced search navigation -->
</fieldset>      
</form>
<!-- ends pages advanced search -->
</section>
<!-- ends image advanced search form container -->