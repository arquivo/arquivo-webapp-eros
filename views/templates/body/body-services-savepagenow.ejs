<section id="home-content" class="home-content-cl">
    <h3>
        <%= t('services-savepagenow.form.accessibility') %>
    </h3>
    <span class="fa fa-video-camera save-page-now-icon" aria-hidden="true"></span><img id="logo-save-page-now"
        class="image-width" src="/img/SavePageNow-blue.svg" alt="SavePageNow">
    <h4 id="save-page-now-slogan">
        <%= t('services-savepagenow.form.text') %>
    </h4>

    <section id="search-tools">
        <form id="search-form" role="form" action="/services/savepagenow?l=<%= getLanguage() %>" method="POST">
            <span class="search-input-button">
                <input id="submit-search-input" type="search" placeholder="<%= t('services-savepagenow.form.label') %>"
                    autocapitalize="off" autocomplete="off" autofocus onmouseout="removeSearchBoxShadow()" name="url"
                    aria-label="<%= t('services-savepagenow.form.label') %>" value="<%- url %>">
                <button id="submit-search" type="submit" class="fa fa-video-camera" value="search menu button"><span
                        class="button-title">
                        <%= t('services-savepagenow.form.button') %>
                    </span></button>
            </span>

        </form>

        <script>
            $('#search-form').submit(function (event) {
                if (!isValidUrl($("#submit-search-input").val())) {
                    event.preventDefault();
                    $('#savepagenow-example').replaceWith('<p id="save-page-url-message-error"></p>');
                    $('#save-page-url-message-error').text('<%= t('services-savepagenow.form.error.default') %>');
                }
            });
        </script>
        <% if (typeof error !='undefined' && error){ %>
            <p id="save-page-url-message-error">
                <%= t('services-savepagenow.form.error.'+errorType) %>
            </p>
            <% } else { %>
                <small id="savepagenow-example">
                    <%= t('services-savepagenow.form.example') %>
                </small>
                <% } %>
    </section>
    <section id="savepagenow-description">
        <p><%- t('services-savepagenow.description.first-line') %></p>
        <p><%= t('services-savepagenow.description.second-line') %></p>
        <p><a href="<%- t('services-savepagenow.learn-more.href') %>"><%= t('services-savepagenow.learn-more.text') %></a></p>
    </section>
</section>