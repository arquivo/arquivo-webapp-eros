<!-- starts content container -->
<section class="header-content-container">
  <h3>Content container</h3>  

<section id="search-tools">
<h3>Search Tools</h3>
<!-- starts search tools input -->
<form id="search-form" action="pages-search-results" method="GET">
<h4>Search input</h4>
  <span class="search-input-button">
  <input id="submit-search-input" type="search" placeholder="Words or URL" autocapitalize="off" autocomplete="off">
  <button id="submit-search" type="submit"  aria-hidden="true" value="search mobile menu button">Search</button>
  <button id="submit-search-mobile" type="submit" class="fas fa-search" aria-hidden="true" value="search mobile menu button"></button></span>

<!-- ends search tools input -->
  
<!-- starts range slider block --> 
 <section id="search-tools-date-slider">   
  <h4>Search Date Slider</h4>  
  
  <!-- starts range slider container -->
  <section id="slider-range-container">     
    <h4>Slider Date Calendars</h4> 
    
    <!-- starts left calendar icon -->
    <ul id="date-container-start">      
      <li class="search-calendar-year"><input type="text" id="start-year" class="call-datepicker-start-year calendar-year-input" name="from-year" value="1996" readonly></li>    
      <li class="search-calendar-day-month"><input type="text"  id="calendar-day-month-start" class="calendar-day-month-input" value="01 Jan" readonly></li>
    </ul>
    <!-- ends left calendar icon -->

    <!-- starts slider handles -->
    <div id="slider-range"></div>
    <!-- ends slider handles -->

    <!-- starts right calendar icon -->
    <ul id="date-container-end"> 
      <li class="search-calendar-year"><input type="text" id="end-year" class="call-datepicker-end-year calendar-year-input" name="to-year" value="2021" readonly></li>    
      <li class="search-calendar-day-month"><input type="text" id="calendar-day-month-end" class="call-datepicker calendar-day-month-input" value="01 Mar" readonly></li>
    </ul>
    <!-- ends right calendar icon -->

  </section>
  <!-- ends range slider container --> 
</section>
<!-- ends range slider block -->  
</form>

