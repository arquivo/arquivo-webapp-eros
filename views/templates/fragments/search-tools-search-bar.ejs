
<% let searchInput = '' %>
<% if(typeof requestData != 'undefined'){ %>
    <% searchInput = requestData.get('q') ?? ''; %>
<% } %>
<span class="search-input-button">
    <input id="submit-search-input" type="search" placeholder="<%= t('home.search-tools.search-hint') %>" autocapitalize="off" autocomplete="off" autofocus onmouseout="removeSearchBoxShadow()" name="q" aria-label="<%= t('home.search-tools.search-hint') %>" value="<%= searchInput %>">
    <button id="submit-search" type="submit" class="fas fa-search" value="search mobile menu button"><span class="button-title"><%= t('home.search-tools.search') %></span></button>
    <input type="hidden" name="l" value="<%= getLanguage() %>">
</span>