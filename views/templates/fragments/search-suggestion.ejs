<% 
let suggestionRequestData = new URLSearchParams()

if(typeof requestData != 'undefined'){ 
    suggestionRequestData = new URLSearchParams(requestData);
 }
 
 suggestionRequestData.set('q',suggestion);
 suggestionRequestData.delete('trackingId');
 suggestionRequestData.set('spellchecked','true')
 %> 
<section id="search-suggestion-container" class="search-suggestion-container-cl">
    <h3><%= t('page-search.search-suggestion.accessibility.title') %></h3>    
    <!-- starts suggestion message --> 
    <section id="search-suggestion-message">
     <h4><%= t('page-search.search-suggestion.accessibility.message') %></h4> 
     <p id="term-suggested" >&rarr; <%= t('page-search.search-suggestion.did-you-mean') %> <a href="javascript:$('#search-suggestion-form').submit();"><%= suggestion %></a></p>
     <form action="/page/search" id="search-suggestion-form" style="display: none;">
        <%- include('hidden-search-inputs', {requestData:suggestionRequestData}) %>
    </form>
    </section> 
    <!-- ends suggestion message -->

</section>