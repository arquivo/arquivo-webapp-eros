<!DOCTYPE html>
<html lang="<%- getLanguage() %>">
    
        <!-- starts document <head>...</head> -->
        <%- include("../templates/head") -%>
        <!-- ends document <head>...</head> -->

<body style="margin: 0px; padding: 0px;">
  
  <link rel="stylesheet" type="text/css" href="/css/styles-save-page-now.css" media="screen">
<!-- Overwriting pywb set_state function in order to properly update our toolbar when iframe changes-->
<header>  
        
  <!-- starts SavePageNow image -->
  <div class="left">
      <img id="logo-save-page-now" class="image-width" src="/img/SavePageNow.svg" alt="save page now"><p>Record pages while surfing the web</p>
  </div>
  <!-- ends SavePageNow image -->
  
  <!-- starts Arquivo.pt logo -->
  <div>
      <a id="logo-arquivo-link" href="/">
      <img id="logo-arquivo" src="/img/arquivo-logo-white.svg" alt="Arquivo.pt">
      </a>  
  </div>
  <!-- ends Arquivo.pt logo -->  
  
  <!-- starts recording animation -->
  <div class="right">
  <div  id="pulsing-section">
      <div class="pulse"></div>
      <p id="colorchange">Recording...</p>         
  </div>
  <!-- ends recording animation -->

  <!-- stars save page now button --> 
  <form action="/services/savepagenow">
   <button id="nav-options-right-button" class="button" type="submit" value="top navigation right menu options button">Stop</button>
   <input type="hidden" name="completed" value="1">   
  </form>
  <!-- ends save page now button -->  
 </div>
</header>
  <div id="wb_iframe_div">
    <iframe name="replay_iframe" id="replay_iframe" src="<%- 'https://rtp.pt' + url %>" seamless="seamless" frameborder="0" scrolling="yes" class="wb_iframe noprint" target="_parent" style="overflow:hidden;height: 100vh;width: 100%;max-width: 100%;max-height: 100%;">
    </iframe>

  </div>
</body>
</html>